FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["Web/EnterpriseITToolkit.Web.csproj", "Web/"]
RUN dotnet restore "Web/EnterpriseITToolkit.Web.csproj"
COPY . .
WORKDIR "/src/Web"
RUN dotnet build "EnterpriseITToolkit.Web.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "EnterpriseITToolkit.Web.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Copy static files
COPY Web/wwwroot/ ./wwwroot/

ENTRYPOINT ["dotnet", "EnterpriseITToolkit.Web.dll"]