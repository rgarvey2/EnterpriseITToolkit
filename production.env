# Production Environment Configuration
# Enterprise IT Toolkit - Production Settings

# Database Configuration
DB_PASSWORD=your_super_secure_database_password_here
POSTGRES_DB=enterprise_toolkit
POSTGRES_USER=enterprise_user

# Redis Configuration
REDIS_PASSWORD=your_super_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_very_long_and_random

# Grafana Configuration
GRAFANA_PASSWORD=your_super_secure_grafana_password_here

# API Configuration
NODE_ENV=production
API_RATE_LIMIT=1000
PORT=5003

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Monitoring Configuration
PROMETHEUS_RETENTION=200h
GRAFANA_ADMIN_USER=admin

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# SSL Configuration (if using Let's Encrypt)
SSL_EMAIL=your-email@domain.com
DOMAIN=yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1024
