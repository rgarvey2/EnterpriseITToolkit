# Use Node.js for the API server
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy API server files
COPY render-api-server.js ./
COPY simple-api-server.js ./

# Expose port
EXPOSE 3000

# Start the API server
CMD ["node", "render-api-server.js"]